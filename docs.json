{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "MCWeb - Minecraft Server Documentation",
  "colors": {
    "primary": "#4CAF50",
    "light": "#81C784",
    "dark": "#2E7D32"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Server Info",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started",
              "rules"
            ]
          },
          {
            "group": "Server Features",
            "pages": [
              "features/plugins",
              "features/economy",
              "features/claims"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Player Guides",
            "pages": [
              "guides/commands",
              "guides/building",
              "guides/trading"
            ]
          },
          {
            "group": "Admin Tools",
            "pages": [
              "guides/admin-commands",
              "guides/moderation"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Join Server",
          "href": "minecraft://mcweb.dyplay.at",
          "icon": "gamepad-2"
        },
        {
          "anchor": "Discord",
          "href": "#",
          "icon": "discord"
        },
        {
          "anchor": "Status",
          "href": "#",
          "icon": "chart-line"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@dyplay.at"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Join Server",
      "href": "minecraft://mcweb.dyplay.at"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "discord": "#",
      "github": "https://github.com/dyplay"
    }
  }
}
